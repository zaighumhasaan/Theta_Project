@model Pharmacy_POS.Models.DrugCategory

@{
    ViewData["Title"] = "Add_Drug_Category";
}

<center>
    <h1>Add Drug Category</h1>
</center>
<hr />

@if (ViewBag.SMESSAGE != null)
{
    <div class="alert-success">@ViewBag.SMESSAGE</div>
}
else if (ViewBag.EXMESSAGE != null)
{
    <div class="alert-info">@ViewBag.EXMESSAGE</div>
}
else if (ViewBag.EMESSAGE != null)
{
    <div class="alert-danger">@ViewBag.SMESSAGE</div>
}


<div class="col-md-6 col-lg-12 col-sm-3">
    

    <form asp-action="Add_Drug_Category">

        <div class="row">
            <div class="col-md-4"><label>Category Name</label></div>
            <div class="col-md-4"><label>DangerousLevel</label></div>


        </div>
        <div class="row ">

            <div class="col-md-4">
                <input type="text" id="categoryname" asp-for="CategoryName" class="form-control" />
            </div>
            <div class="form-group col-md-4"><input id="dangerouslevel" asp-for="DangerousLevel" class="form-control" /> </div>


            <div class="form-group col-md-4">
                <input type="submit" id="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>


    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{


    <script>


            $(document).on("click", "#submit", function () {
                alert(1);
                var category = {
                    CategoryName: $('#categoryname').val(),
                    DangerousLevel: $('#dangerouslevel').val(),
                };
              
                
                $.ajax({
                    type: "POST",
                    URL: "/Category_/Add_Drug_Category",
                    data: { category: JSON.stringify(category) },
                    success: function (result) {
                        alert(result);
                    }
                });

            });



    </script>



}
