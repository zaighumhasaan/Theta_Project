@model Pharmacy_POS.Models.Drug

@{
    ViewData["Title"] = "Update_Drugs";
}

<h1>Update Drugs</h1>


<hr />
@if(ViewBag.SMESSAGE!=null)
{
    <div class="alert alert-success">@ViewBag.SMESSAGE</div>
}
else if(ViewBag.EMESSAGE!=null)
{
    <div class="alert alert-success">@ViewBag.EMESSAGE</div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update_Drugs">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DrugId" />
            <div class="form-group">
                <label asp-for="DrugName" class="control-label"></label>
                <input asp-for="DrugName" class="form-control" />
                <span asp-validation-for="DrugName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScientificName" class="control-label"></label>
                <input asp-for="ScientificName" class="form-control" />
                <span asp-validation-for="ScientificName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrugCategory" class="control-label"></label>
                <input asp-for="DrugCategory" class="form-control" />
                <span asp-validation-for="DrugCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfUnitsInPackage" class="control-label"></label>
                <input asp-for="NoOfUnitsInPackage" class="form-control" />
                <span asp-validation-for="NoOfUnitsInPackage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
